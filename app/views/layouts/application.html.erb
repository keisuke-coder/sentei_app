<!DOCTYPE html>
<html>
  <head>
    <title>SenteiApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <%= render 'shared/header' %>
    </header>
    <main id="<%= controller.controller_name %>-<%= controller.action_name %>">
      <%= yield %>
    </main>
  </body>
</html>
